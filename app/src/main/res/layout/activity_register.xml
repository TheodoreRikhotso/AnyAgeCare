<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_sign_up"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="16dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="16dp"

    >

    <android.support.design.widget.TextInputLayout
    android:layout_below="@+id/icon"
    android:id="@+id/tiName"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <EditText
    android:id="@+id/etName"
    android:hint="Name"
    android:inputType="textCapWords"
    android:maxLines="1"
    android:layout_width="match_parent"
    android:layout_height="51dp"/>
    </android.support.design.widget.TextInputLayout>


    <android.support.design.widget.TextInputLayout
        android:layout_below="@+id/tiName"
        android:id="@+id/tiSurname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <EditText
            android:id="@+id/etSurname"
            android:hint="Surname"
            android:inputType="textCapWords"
            android:maxLines="1"
            android:layout_width="match_parent"
            android:layout_height="51dp"/>
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
    android:layout_below="@+id/tiSurname"
    android:id="@+id/tiContact"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    >

    <EditText
    android:id="@+id/etContact"
    android:hint=" Contact No:"

    android:inputType="number"
    android:maxLines="1"
    android:layout_width="match_parent"
    android:layout_height="51dp"/>
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
    android:layout_below="@+id/tiContact"
    android:id="@+id/tiEmail"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <EditText
    android:id="@+id/etEmail"
    android:hint=" Email"
    android:textColor="@android:color/black"
    android:inputType="textCapWords"

    android:maxLines="1"
    android:layout_width="match_parent"
    android:layout_height="43dp"/>
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
    android:layout_below="@+id/tiEmail"
    android:id="@+id/tiPassword"
    android:layout_width="match_parent"
    app:passwordToggleEnabled="true"
    android:layout_height="wrap_content"
    >

    <EditText
    android:id="@+id/edPassword"
    android:layout_width="match_parent"
    android:layout_height="46dp"
    android:layout_marginTop="67dp"
    android:hint=" Password"
    android:textColor="@android:color/black"

    android:inputType="textPassword"
    android:maxLines="1"
    android:layout_below="@+id/signup_input_password"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true" />






    </android.support.design.widget.TextInputLayout>



    <Button
    android:id="@+id/btnRegister"
    style="@style/Widget.AppCompat.Button.Colored"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_above="@+id/signup_btn_forgot_pass"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true"
    android:layout_marginBottom="57dp"
    android:background="@android:color/holo_green_light"
    android:text="Submit"
    android:textColor="@android:color/black" />

    <TextView
    android:id="@+id/signup_btn_forgot_pass"
    android:clickable="true"
        android:visibility="invisible"
    android:text="Forgot Password ?"
    style="@style/Widget.AppCompat.Button.Borderless"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_above="@+id/signup_btn_login"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true"
    android:layout_marginBottom="33dp"
    android:textColor="#6F6F6F"
    android:textSize="12dp"  />




    <TextView
    android:id="@+id/signup_btn_login"
    android:clickable="true"
    android:text="Already have an account? Login!"
    style="@style/Widget.AppCompat.Button.Borderless"
    android:textColor="#6F6F6F"
    android:textSize="12dp"
        android:visibility="invisible"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:layout_alignParentEnd="true" />


</RelativeLayout>